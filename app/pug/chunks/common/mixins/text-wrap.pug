mixin text-wrap(wrapperTitle, wrapperSubText,wrapperInput, wrapperBtn )
    div.item__wrapper__box
        .row
            .col-md-12
                h1.page-title-extra-large.newsletter__title__font__size.help__title__font__size.fw-300=wrapperTitle
                h4.font-size-extra-middle.newsletter__subtitle__font__size.help__subtitle__font__size.fw-300=wrapperSubText
                div.input-group
                    input(type="tel" name="phone" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}" placeholder=wrapperInput)
                    button(type="submit")=wrapperBtn